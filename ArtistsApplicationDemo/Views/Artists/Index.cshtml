@model IEnumerable<ArtistsApplicationDemo.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create","Artists", new { @class = "btn btn-default btn-sm" })
</p>
<table class="table" id="artists">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.FullName, "Edit", new {id=item.ID})
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            <button class="btn-link js-delete" data-artist-id="@Html.DisplayFor(modelItem=>item.ID)">Delete</button>
        </td>
    </tr>
}

</table>

@section scripts{
    
    <script>
        $(document).ready(function () {
            $("#artists").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this artist?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/artists/" + button.attr("data-artist-id"),
                            method: "DELETE"
                        }).done(function (data) {
                            button.parents("tr").remove();
                        }).fail(function (error) {
                            console.log(error);
                        });
                    }
                });
            });
        });
    </script>
    
    
    
    
    
    
